<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/cardBackColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewCart"
                android:layout_width="150dp"
                android:layout_height="139dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/espressoimage"
                app:cornerRadius="16dp"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingBottom="10dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textViewCartName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cappuccino"
                        android:textColor="@color/textColorItemCoffeTextView"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCartSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size: M"
                        android:textSize="13dp" />


                    <TextView
                        android:id="@+id/textViewCartPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 $"
                        android:textColor="@color/textColorItemCoffeTextView"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/heartFavorite"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/heartcartitem" />

                    <ImageView
                        android:id="@+id/clear_coffe"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/delete_coffe" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
